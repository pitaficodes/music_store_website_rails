<% if @success == 1 %>
    $("#pass_modal").modal('hide');
    $(".flash-notice-static").text("Your password successfully updated.");
<% elsif @success == 0 %>
    $(".remote-errors").text("Please check your password must be 8 character long.");
<% else %>
    $(".remote-errors").text("Please enter the correct current password.");
<% end %>
